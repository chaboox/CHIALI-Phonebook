<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:focusable="true" android:focusableInTouchMode="true"
    tools:context=".Activity.LoginActivity">
    <!-- Login progress -->
        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="33"
            android:background="@drawable/blue_100_600x600"
            android:weightSum="100"
            android:gravity="center"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/white"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:src="@drawable/logo_s"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/blue_100_600x600"
                android:layout_weight="67">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/blue_100_600x600"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rela">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="wrap_content"
                        app:cardElevation="8dp"
                        android:id="@+id/carview"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="15dp"
                        app:cardCornerRadius="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginRight="40dp">
                            <!-- Erreur  5.1.1 version-->
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/gray3"
                                android:theme="@style/newTextLabel"
                                >

                            <EditText
                                android:layout_width="match_parent"
                                android:hint="Nom d'utilisateur"
                                android:id="@+id/email"
                                android:textSize="15sp"
                                android:text=""
                                android:singleLine="true"
                                android:layout_marginBottom="15dp"
                                android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/newTextLabel">

                            <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/password"
                                android:hint="Mot de passe"
                                android:text=""
                                android:singleLine="true"
                                android:textSize="15sp"
                                android:inputType="textPassword"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="80dp"/>
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/innerProductCard"
                    android:layout_width="match_parent"

                    android:layout_height="50dp"
                    app:cardCornerRadius="24dp"
                    android:layout_below="@+id/rela"
                    app:cardBackgroundColor="@color/colorPrimaryDark2"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="-40dp"
                    app:cardUseCompatPadding="false"
                    android:background="@drawable/blue_100_600x600"

                   >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/log"

                      >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/roundshape"

                            android:scaleType="centerCrop"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:shadowColor="@color/white"
                            android:textColor="@color/white"
                            android:padding="10dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:text="Connexion"
                            android:drawablePadding="13dp"
                            android:background="@null"
                            android:textCursorDrawable="@drawable/cursor"
                            android:id="@+id/search"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo_s"
                    android:layout_below="@+id/innerProductCard"
                    android:visibility="gone"
                    />

            </RelativeLayout>

        </LinearLayout>
                <ProgressBar
                    android:id="@+id/login_progress"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAlignment="center"
        android:text="@string/d_velopp_par_nadam_deboos_re_n_2020_gc_inc"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>
</RelativeLayout>
