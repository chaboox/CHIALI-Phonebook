<?xml version="1.0" encoding="utf-8"?>
<com.gw.swipeback.SwipeBackLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeBackLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:directionMode="left"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/white"
  >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/greenbglayout"
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimaryDark"

                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/arrows"
                        android:padding="7dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="7dp"
                        android:id="@+id/close"
                        android:layout_alignParentStart="true"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/export_new"
                        android:padding="7dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="7dp"
                        android:id="@+id/export"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:cardElevation="8dp"
                        android:layout_marginTop="60dp"

                        android:shadowDx="4"
                        android:shadowDy="4"
                        android:shadowRadius="12"
                        app:cardCornerRadius="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="-50dp"/>
                    <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardElevation="8dp"
                    android:shadowDx="4"
                    android:shadowDy="4"
                    android:shadowRadius="12"
                    app:cardCornerRadius="60dp"
                        android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/image"

                        android:layout_gravity="center"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:civ_border_width="3dp"

                        app:civ_border_color="@color/white"
                        android:src="@drawable/user2"
                        />
                </androidx.cardview.widget.CardView></RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adam Deboosere"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dev mobile"
                        android:layout_gravity="center"
                        android:textSize="13sp"
                        android:textColor="@color/colorPrimaryDark"
                        />

                    <TextView
                        android:id="@+id/departement_i"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DSI"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/grayF"
                        />
                </LinearLayout>

            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/mail_layout"

                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/icon_mail"
                    android:layout_centerVertical="true"
                    android:src="@drawable/mail_100"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/icon_mail"
                    android:layout_marginStart="20dp"
                    android:id="@+id/mail"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeTextType="uniform"
                    android:lines="1"

                    android:layout_centerInParent="true"
                    android:text="adam.deboosere@groupe-chiali.com" />

                <View
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_toEndOf="@+id/icon_mail"
                    android:layout_marginStart="20dp"
                    android:background="@color/grayline"
                    android:layout_below="@+id/mail"/>


            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/number_layout">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/icon"
                    android:src="@drawable/call_100"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/icon"
                    android:layout_marginStart="20dp"
                    android:id="@+id/number"
                    android:layout_centerInParent="true"
                    android:text="0532548845" />

                <View
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_toEndOf="@+id/icon"
                    android:layout_marginStart="20dp"

                    android:background="@color/grayline"
                    android:layout_below="@+id/number"/>


            </RelativeLayout>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/voip_layout">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/voip"
                    android:src="@drawable/homephone_100"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/voip"
                    android:layout_marginStart="20dp"
                    android:id="@+id/fix"
                    android:layout_centerInParent="true"
                    android:text="4187" />

                <View
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_toEndOf="@+id/voip"
                    android:layout_marginStart="20dp"

                    android:background="@color/grayline"
                    android:layout_below="@+id/fix"/>


            </RelativeLayout>



            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/company_layout">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/icon_company"
                    android:src="@drawable/company_100"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/icon_company"
                    android:layout_marginStart="20dp"
                    android:id="@+id/company"
                    android:layout_centerInParent="true"
                    android:text="CHIALI" />

                <View
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_toEndOf="@+id/icon_company"
                    android:layout_marginStart="20dp"

                    android:background="@color/grayline"
                    android:layout_below="@+id/company"/>


            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/department_layout">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/icon_department"
                    android:src="@drawable/department_100"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/icon_department"
                    android:layout_marginStart="20dp"
                    android:id="@+id/department"
                    android:layout_centerInParent="true"
                    android:text="DSI" />

                <View
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_toEndOf="@+id/icon_department"
                    android:layout_marginStart="20dp"

                    android:background="@color/grayline"
                    android:layout_below="@+id/department"/>


            </RelativeLayout>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/location_layout">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/icon_location"
                    android:src="@drawable/buildings"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/icon_location"
                    android:layout_marginStart="20dp"
                    android:id="@+id/location"
                    android:layout_centerInParent="true"
                    android:text="38 - Bloc Administratif" />

                <View
                    android:visibility="invisible"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_toEndOf="@+id/icon_location"
                    android:layout_marginStart="20dp"

                    android:background="@color/grayline"
                    android:layout_below="@+id/location"/>


            </RelativeLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="15"
                android:layout_marginTop="25dp"
                android:gravity="center"

                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="70dp"
                    app:cardCornerRadius="12dp"
                    android:id="@+id/cardview_call"
                    app:cardUseCompatPadding="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark2"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/calln"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="70dp"
                    app:cardCornerRadius="12dp"
                    android:id="@+id/cardview_sms"
                    app:cardUseCompatPadding="true"


                    app:cardBackgroundColor="@color/colorPrimaryDark2"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/messagen"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    app:cardCornerRadius="12dp"
                    android:layout_weight="5"
                    app:cardUseCompatPadding="true"
                    android:id="@+id/carview_mail"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark2"

                    >   <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/mailn"
                        android:padding="12dp"/>
                </RelativeLayout></androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>






</LinearLayout>

    </RelativeLayout>
</com.gw.swipeback.SwipeBackLayout>